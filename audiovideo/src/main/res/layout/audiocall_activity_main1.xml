<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.eju.cy.audiovideo.audio.audiolayout.TRTCAudioLayoutManager

        android:id="@+id/trtc_layout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_mic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@+id/btn_audio"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/iv_mute_audio" />

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/btn_audio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/iv_exit_audio" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_handsfree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/btn_audio"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/iv_handsfree_open" />

    </RelativeLayout>


</RelativeLayout>