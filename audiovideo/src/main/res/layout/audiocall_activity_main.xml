<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBtnDisable">

    <com.eju.cy.audiovideo.audio.audiolayout.TRTCAudioLayoutManager
        android:id="@+id/trtc_layout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_portrait"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/iv_portrait"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_mic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/btn_exit"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_av_jingyinyikaiqi" />

        <android.support.v7.widget.AppCompatImageButton

            android:id="@+id/btn_exit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_av_guaduan" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_handsfree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/btn_exit"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_av_miantiyikaiqi" />

    </RelativeLayout>


</RelativeLayout>