<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_background"
    android:layout_height="match_parent"
    android:background="@color/colorBtnDisable">


    <ImageView

        android:id="@+id/iv_portrait"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY" />


    <TextView

        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/iv_portrait"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorWaitText"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="邀请你进行语音通话"
        android:textColor="@color/colorDialogTextColor"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_guaduan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_av_guaduan" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_jieting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_av_jieting" />


    </RelativeLayout>


</RelativeLayout>